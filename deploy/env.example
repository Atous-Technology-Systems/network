# Runtime
APP_ENV=production
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Security / Admin
ALLOWED_HOSTS=your.domain,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://your-admin-frontend
ADMIN_ENABLED=false
ADMIN_AUTH_ENABLED=true
ADMIN_API_KEY=change-me
ADMIN_BYPASS_SECURITY=false
MAX_REQUEST_SIZE_BYTES=1048576
BLOCKED_IPS=

# Rate Limiting
RATE_LIMIT_RPM=120
RATE_LIMIT_RPH=2400
RATE_LIMIT_BURST=20
RATE_LIMIT_BLOCK_MIN=2

# Admin Events
MAX_ADMIN_EVENT_BYTES=8192
ADMIN_REDACT_KEYS=password,secret,token,key

